# データベース設定
DATABASE_URL=postgresql://postgres:password@localhost:5432/auto_inquiry_form_submitter

# Redis設定
REDIS_URL=redis://localhost:6379/0

# セキュリティ設定
SECRET_KEY=your-secret-key-here-please-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS設定（開発環境）
